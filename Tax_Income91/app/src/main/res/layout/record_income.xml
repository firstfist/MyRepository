<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.firstsecond.tax_income91.Record_income">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_income"
        android:text="บันทึกเงินได้"
        android:padding="18dp"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="เงินได้พึงประเมิน"
        android:id="@+id/textview_income1"
        android:padding="15dp"
        android:layout_below="@+id/textview_income"
        />
    <EditText
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittextIncome1"
        android:layout_below="@+id/textview_income"
        android:layout_alignParentRight="true"
        android:inputType="number"
         />
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="ภาษีหัก ณ ที่จ่าย"
        android:id="@+id/textview_income2"
        android:padding="15dp"
        android:layout_below="@id/edittextIncome1"/>
    <EditText
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittextIncome2"
        android:layout_below="@+id/edittextIncome1"
        android:layout_alignParentRight="true"
        android:inputType="number"/>
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="เงินสะสมกองทุนสำรองเลี้ยงชีพ"
        android:id="@+id/textview_income3"
        android:padding="15dp"
        android:layout_below="@id/textview_income2"
        />
    c<EditText
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittextIncome3"
        android:layout_below="@id/edittextIncome2"
        android:layout_alignParentRight="true"
        android:inputType="number"/>
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="หักเงินกองทุนสำรองเลี้ยงชีพ(ส่วนที่
        เกิน10,000)"
        android:id="@+id/textview_income4"
        android:padding="15dp"
        android:layout_below="@+id/textview_income3"/>
    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview_saving"
        android:layout_below="@+id/textview_income3"
        android:layout_alignParentRight="true"
        android:text=""
        android:padding="15dp"
        />
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="เงินสะสม กบข."
        android:padding="15dp"
        android:id="@+id/textview_income5"
        android:layout_below="@+id/textview_income4"
        />
    <EditText
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittextIncome5"
        android:layout_below="@id/textview_income4"
        android:inputType="number"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="เงินสะสมกองทุนสงเคราะห์ครู
        โรงเรียนเอกชน"
        android:id="@+id/textview_income6"
        android:padding="15dp"
        android:layout_below="@id/textview_income5"/>
    <EditText
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittextIncome6"
        android:inputType="number"
        android:layout_below="@+id/textview_income5"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:id="@+id/prev_income"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next_income"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
